<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="table-responsive">
                <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" name="title" value="<%= item.title %>" placeholder="Masukkan Title" required/>
                        </div>
                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="number" class="form-control" name="price" value="<%= item.price %>" placeholder="Masukkan Harga" required/>
                        </div>
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" class="form-control" name="city" value="<%= item.city %>" placeholder="Masukkan Nama Kota" required/>
                        </div>
                        <div class="form-group">
                            <label for="category">Category</label>
                            <select class="form-control" id="categoryId" name="categoryId">
                                <option value="<%= item.categoryId._id %>">--- <%= item.categoryId.name %> ---</option>
                                <% for(let i=0; i<categories.length; i++){ %>
                                    <option value="<%= categories[i].id %>"><%= categories[i].name %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="name">Image</label>
                            <input type="file" accept=".jpeg,.jpg,.png" class="form-control" name="image" multiple/>
                        </div>
                        <div class="form-group">
                            <label for="about">Description</label>
                            <textarea name="about" class="form-control"><%= item.description %></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary align-left">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>