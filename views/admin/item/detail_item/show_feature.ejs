<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="home-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <form action="/admin/item/add/feature" method="POST" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="name">Nama</label>
                                <input type="text" class="form-control" name="name" placeholder="Masukkan Nama" required/>
                            </div>
                            <div class="form-group">
                                <label for="qty">QTY</label>
                                <input type="number" class="form-control" name="qty" placeholder="Masukkan Qty" required/>
                            </div>
                            <div class="form-group">
                                <label for="name">Image</label>
                                <input type="file" accept=".jpeg,.jpg,.png" class="form-control" name="image" required/>
                            </div>
                            <input type="hidden" value="<%= itemId %>" name="itemId"/>
                            <button type="submit" class="btn btn-primary align-left">save</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-7">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>QTY</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i<features.length; i++) { %>
                                    <tr>
                                      <td>
                                        <%= i+1 %>
                                      </td>
                                      <td>
                                        <%= features[i].name %>
                                      </td>
                                      <td>
                                        <%= features[i].qty %>
                                      </td>
                                      <td>
                                        <img src="https://y-admin-staycation.herokuapp.com/<%= features[i].imageUrl %>" alt="" width="70px"/>
                                      </td>
                                      <td>
                                        <form action="/admin/item/<%= itemId %>/feature/<%= features[i].id %>?_method=DELETE" method="POST">
                                          <a href="javascript:void()" class="btn btn-warning btn-circle btn-sm button-update" 
                                          data-id="<%= features[i].id %>" data-name="<%= features[i].name %>" data-qty="<%= features[i].qty %>">
                                            <i class="fas fa-edit"></i>
                                          </a>
                                          <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                        </form>
                                      </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
  